<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MealOrderSystem</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MealOrderSystem.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Menu" asp-action="News">
                    <img src="https://cdn-icons-png.flaticon.com/512/123/123281.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    牛排館
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link " asp-area="" asp-controller="Menu" asp-action="News">最新消息</a>
                        <a class="nav-link " asp-area="" asp-controller="Menu" asp-action="Index">菜單</a>
                        <a class="nav-link " asp-area="" asp-controller="Menu" asp-action="ListMenu">餐點管理</a>
                        <a class="nav-link" href="#">我的訂單</a>
                    </div>
                </div>
                <span class="glyphicon glyphicon-shopping-cart my-cart-icon">
                     <img src="https://cdn-icons-png.flaticon.com/512/263/263142.png" alt="" width="40" height="40" class="glyphicon glyphicon-shopping-cart my-cart-icon">
                    <span class="badge badge-notify my-cart-badge"></span>
                </span>
            </div>
        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MealOrderSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-2.2.3.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery.mycart.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
