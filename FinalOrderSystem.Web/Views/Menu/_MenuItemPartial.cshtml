@model IEnumerable<FinalOrderSystem.DataClass.DataModels.Menu>

<div class="card-group">
@{
    @foreach (var item in Model)
        {
            // Card
                <div class="card-card-deck">
                    <div class="card" style="width: 20rem; height: 35rem;">
                        <img class="card-img-top" style="width: 20rem; height: 18rem;" src="@item.Image" alt="Card image cap">
                        <div class="card-body d-flex flex-column ">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-text">NT$@item.Price</h6>
                            <p class="card-text">@item.Description</p>
                        @{
                            var tempId = @item.SID;
                            var tempName = @item.Name;
                            var tempPrice = @item.Price;
                            var tempImage = @item.Image;

                        }
                            <button class="btn btn-danger my-cart-btn mt-auto" data-id="@tempId" data-name="@tempName" data-summary="summary 2" data-price="@tempPrice" data-quantity="1"data-image="@tempImage">加入購物車</button>
                           
                         </div>
                    </div>
                </div>
        }
}
</div>